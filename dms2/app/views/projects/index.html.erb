<div class="page-header">
  <h1>Listing projects</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Project name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Assign Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.project_name,  project %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= link_to 'Assign Role', project %></td>
        <td><%= link_to image_tag('edit.png'), edit_project_path(project) %></td>
        <td><%= link_to image_tag('delete.png'), project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-3">
  <%= link_to 'New Project', new_project_path, :class => "btn btn-primary", :style => "width:100%;" %>
</div>