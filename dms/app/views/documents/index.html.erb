<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>Document name</th>
      <th>Comment</th>
      <th>File location</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.document_name %></td>
        <td><%= document.comment %></td>
        <td><%= document.file_location %></td>
        <td><%= document.created_by %></td>
        <td><%= document.updated_by %></td>
        <td><%= document.project_id %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

